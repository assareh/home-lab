upstream dns_servers {
{{ range service "dns" }}
  server {{ .Address }}:{{ .Port }};
  {{else}}
  server 127.0.0.1:65535; # force a 502
{{ end }}
}

server {
    listen 53  udp;
    listen 53; #tcp
    proxy_pass      dns_servers;
    error_log       /var/log/nginx/dns.log debug;
    proxy_responses 1;
    proxy_timeout   1s;
}